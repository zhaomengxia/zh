<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zh.mapper.wading.BridgeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zh.entity.wading.Bridge">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_deleted" property="deleted"/>
        <result column="area_code" property="areaCode"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="type" property="type"/>
        <result column="height" property="height"/>
        <result column="width" property="width"/>
        <result column="length" property="length"/>
    </resultMap>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultDtoMap" type="com.zh.dto.wading.BridgeDTO">
        <id column="id" property="id"/>
        <result column="areaName" property="areaName"/>
        <result column="areaCode" property="areaCode"/>
        <result column="bridgeName" property="bridgeName"/>
        <result column="code" property="code"/>
        <result column="type" property="type"/>
        <result column="height" property="height"/>
        <result column="width" property="width"/>
        <result column="length" property="length"/>
    </resultMap>


    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, create_time, update_time, is_deleted, area_code, name, code, type, height, width, length
    </sql>

    <!-- 通用查询结果列 -->
    <sql id="BaseDto_Column_List">
      b.id id, bad.division_code areaCode,b.name bridgeName,b.code code,b.type,b.height,b.width,b.length,bad.division_name areaName
    </sql>

    <select id="selectAllByMessage" resultMap="BaseResultDtoMap">
        select
        <include refid="BaseDto_Column_List"/>
        from bridge b LEFT JOIN basic_administrative_division bad
        ON b.area_code=bad.division_code and bad.is_deleted=0
        WHERE b.is_deleted=0
        <if test="keywords != null and '' != keywords">
            <bind name="keywords" value="'%'+keywords+'%'"/>
            and CONCAT(b.name,b.code,bad.division_code,bad.division_name,b.type) like #{keywords}
        </if>

       Order By b.create_time desc

    </select>

</mapper>
